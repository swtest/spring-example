<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 생성자로 객체 레퍼런스 주입하기 -->
	<bean id="macbookProRetina" class="kr.co.swtest.example.spring.bean.example02.MacBookProRetina" />

	<bean id="iPhoneAppProgrammer" class="kr.co.swtest.example.spring.bean.example02.IPhoneAppProgrammer">
		<constructor-arg value="12" />
		<constructor-arg ref="macbookProRetina" />
	</bean>
</beans>