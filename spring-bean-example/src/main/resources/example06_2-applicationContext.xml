<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 빈 프로퍼티에 주입하기 -->
	<bean id="macbookPro2012" class="kr.co.swtest.example.spring.bean.example02.MacBookPro2012" />

	<bean id="androidAppProgrammer" class="kr.co.swtest.example.spring.bean.example06.AndroidAppProgrammer">
		<property name="addWorkTime" value="3" />
		<property name="computer" ref="macbookPro2012" />
